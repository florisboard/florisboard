<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/speekez_widget_background"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/preset_emoji"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textSize="28sp"
        android:text="ðŸŽ™ï¸" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <TextView
            android:id="@+id/preset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preset Name"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/preset_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtitle"
            android:textColor="#BBBBBB"
            android:textSize="12sp"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>

    <ImageView
        android:id="@+id/mic_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:background="@drawable/speekez_mic_button_background"
        android:src="@drawable/ic_mic"
        android:scaleType="centerInside"
        android:contentDescription="Start recording" />

</LinearLayout>
