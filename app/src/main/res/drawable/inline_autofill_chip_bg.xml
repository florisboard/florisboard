<!--
  The file is originally based on:
  https://android.googlesource.com/platform/frameworks/support/+/androidx-main/autofill/autofill/src/main/res/drawable-v29/autofill_inline_suggestion_chip_background.xml

  Notable changes:
  - Remove insets (they are applied in Compose)
  - Add a ripple mask
  -->

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="#14000000">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/suggestions_chip_corner_radius"/>
            <stroke android:color="#1F000000" android:width="1dp"/>
            <solid android:color="#FFFFFFFF"/>
        </shape>
    </item>

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/suggestions_chip_corner_radius" />
            <solid android:color="#14000000" />
        </shape>
    </item>
</ripple>
